<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.requerimientos.login.Inicio" >

    <TextView
        android:id="@+id/txtDest1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="27dp"
        android:text="@string/populares"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/txtDest2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtDestinos"
        android:layout_below="@+id/txtDestinos"
        android:layout_marginTop="40dp"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/txtDest3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtDest2"
        android:layout_below="@+id/txtDest2"
        android:layout_marginTop="43dp"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/txtDest4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/txtDest3"
        android:layout_below="@+id/txtDest3"
        android:layout_marginTop="54dp"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/txtDest5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtDest4"
        android:layout_below="@+id/txtDest4"
        android:layout_marginTop="40dp"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btnDest2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtDest2"
        android:layout_alignBottom="@+id/txtDest2"
        android:layout_alignLeft="@+id/btnDest1"
        android:background="@drawable/ic_action_forward"/>

    <Button
        android:id="@+id/btnDest3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtDest3"
        android:layout_alignBottom="@+id/txtDest3"
        android:layout_alignLeft="@+id/btnDest2"
        android:background="@drawable/ic_action_forward"/>

    <Button
        android:id="@+id/btnDest4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtDest4"
        android:layout_alignBottom="@+id/txtDest4"
        android:layout_alignLeft="@+id/btnDest3"
        android:background="@drawable/ic_action_forward"/>

    <Button
        android:id="@+id/btnDest5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtDest5"
        android:layout_alignBottom="@+id/txtDest5"
        android:layout_alignLeft="@+id/btnDest4"
        android:background="@drawable/ic_action_forward"/>

    <TextView
        android:id="@+id/txtDestinos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtDest1"
        android:layout_below="@+id/txtDest1"
        android:layout_marginTop="40dp"
        android:text="Medium Text"
       
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btnDest1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtDestinos"
        android:layout_alignBottom="@+id/txtDestinos"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp"
        android:background="@drawable/ic_action_forward" />

</RelativeLayout>