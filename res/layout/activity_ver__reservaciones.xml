<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.requerimientos.login.Ver_Reservaciones" >

    <TextView
        android:id="@+id/txtReservacionesActivas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:text="@string/activas"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/txtActiva1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtReservacionesActivas"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="28dp"
        android:text="Reservación 1" />

    <TextView
        android:id="@+id/txtActiva2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtActiva1"
        android:layout_below="@+id/txtActiva1"
        android:layout_marginTop="40dp"
        android:text="Reservación 2" />

    <TextView
        android:id="@+id/txtActiva3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtActiva2"
        android:layout_below="@+id/txtActiva2"
        android:layout_marginTop="41dp"
        android:text="Reservacion 3" />

    <TextView
        android:id="@+id/txtReservacionesCanceladas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/canceladas"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/txtCancelada1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtActiva3"
        android:layout_below="@+id/txtReservacionesCanceladas"
        android:layout_marginTop="38dp"
        android:text="Reservación 1" />

    <TextView
        android:id="@+id/txtCancelada2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtCancelada1"
        android:layout_below="@+id/txtCancelada1"
        android:layout_marginTop="33dp"
        android:text="Reservación 2" />

    <TextView
        android:id="@+id/txtCancelada3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtCancelada2"
        android:layout_below="@+id/txtCancelada2"
        android:layout_marginTop="31dp"
        android:text="Reservación 3" />

    <Button
        android:id="@+id/btnActiva1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtActiva1"
        android:layout_alignBottom="@+id/txtActiva1"
        android:layout_alignRight="@+id/txtReservacionesCanceladas"
        android:background="@drawable/ic_action_forward" />

    <Button
        android:id="@+id/btnActiva2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtActiva2"
        android:layout_alignBottom="@+id/txtActiva2"
        android:layout_alignLeft="@+id/btnActiva1"
        android:background="@drawable/ic_action_forward" />

    <Button
        android:id="@+id/btnActiva3"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtActiva3"
        android:layout_alignBottom="@+id/txtActiva3"
        android:layout_alignRight="@+id/btnActiva2"
        android:background="@drawable/ic_action_forward" />

    <Button
        android:id="@+id/btnCancela1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtCancelada1"
        android:layout_alignBottom="@+id/txtCancelada1"
        android:layout_alignLeft="@+id/btnActiva3"
        android:background="@drawable/ic_action_forward" />

    <Button
        android:id="@+id/btnCancela2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtCancelada2"
        android:layout_alignBottom="@+id/txtCancelada2"
        android:layout_alignRight="@+id/btnCancela1"
        android:background="@drawable/ic_action_forward" />

    <Button
        android:id="@+id/btnCancela3"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtCancelada3"
        android:layout_alignBottom="@+id/txtCancelada3"
        android:layout_alignLeft="@+id/btnCancela2"
        android:background="@drawable/ic_action_forward" />

</RelativeLayout>