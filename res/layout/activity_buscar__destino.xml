<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.requerimientos.login.Buscar_Destino" >

    <TextView
        android:id="@+id/txtCoincidencias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="@string/busqueda_destinos"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/txtCoinc1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtCoincidencias"
        android:layout_below="@+id/txtCoincidencias"
        android:layout_marginTop="23dp"
        android:text="@string/nombre_clave"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/inputNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtCoinc1"
        android:layout_below="@+id/txtCoinc1"
        android:ems="10" />

    <TextView
        android:id="@+id/txtCoinc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/inputNombre"
        android:layout_below="@+id/inputNombre"
        android:layout_marginTop="17dp"
        android:text="@string/tipo_destino"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <RadioButton
        android:id="@+id/radioNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/radioOfertas"
        android:layout_alignBottom="@+id/radioOfertas"
        android:layout_toRightOf="@+id/txtCoinc1"
        android:text="@string/normal" 
        android:onClick="onRadioButtonClicked"/>

    <RadioButton
        android:id="@+id/radioOfertas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtCoinc2"
        android:layout_below="@+id/txtCoinc2"
        android:layout_marginTop="29dp"
        android:text="@string/ofertas" 
        android:onClick="onRadioButtonClicked"/>

    <RadioButton
        android:id="@+id/radioFuera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/radioDentro"
        android:layout_below="@+id/radioDentro"
        android:text="@string/ubicacion_fuera" 
        android:onClick="onRadioButtonClicked"/>

    <RadioButton
        android:id="@+id/radioDentro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtCoinc3"
        android:layout_toRightOf="@+id/txtCoinc2"
        android:text="@string/ubicacion_dentro" 
        android:onClick="onRadioButtonClicked"/>
    
    <RadioButton
        android:id="@+id/radioPaquete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/radioOfertas"
        android:layout_below="@+id/radioNormal"
        android:text="@string/paquetes" 
        android:onClick="onRadioButtonClicked"/>

    <TextView
        android:id="@+id/txtCoinc3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/radioOfertas"
        android:layout_below="@+id/radioOfertas"
        android:layout_marginTop="37dp"
        android:text="@string/ubicacion"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btnCoinc1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/txtCoincidencias"
        android:layout_below="@+id/radioFuera"
        android:text="@string/buscar_destino" />

 

</RelativeLayout>